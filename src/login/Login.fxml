<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="250.0"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="login.Login"
>
    <VBox layoutX="250.0" layoutY="250.0" spacing="10"
    >
    <HBox alignment="CENTER" >
        <Label fx:id="aUser" text="Hello! User." />
    </HBox>
        <HBox alignment="CENTER">
            <Label text="User Name" />
            <TextField fx:id="userName" promptText="Enter your user name...."
                onAction="#handleLogin" />
        </HBox>
        <HBox alignment="CENTER">
            <Button text="Submit" onAction="#handleLogin" />
        </HBox>
    </VBox>
    <HBox alignment="CENTER" onMouseClicked="#goToSignUp"
        style="-fx-min-height: 30px; -fx-max-height: 30px;">
        <Label text="Become an User." style="-fx-text-decoration: underline; -fx-cursor: hand;" />
    </HBox>
</StackPane>