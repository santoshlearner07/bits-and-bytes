<?import javafx.scene.control.TextField?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="hellofx.Login"
>
    <VBox layoutX="150.0" layoutY="200.0" spacing="10">
        <HBox alignment="CENTER">
            <Label text="User Name" />
            <TextField fx:id="userName" promptText="Enter your user name...."
                onAction="#handleLogin" />
        </HBox>
    </VBox>
</StackPane>
